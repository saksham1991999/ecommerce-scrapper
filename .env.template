# API Configuration
API_KEY=your_secret_api_key
# Set a strong, unique API key for authentication

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@postgres/scraper_db
# Format: postgresql+asyncpg://username:password@host:port/database_name

# Redis Configuration
REDIS_URL=redis://redis:6379
# Format: redis://username:password@host:port/db_number

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=your_twilio_phone_number
TWILIO_TO_NUMBER=recipient_phone_number
# Obtain these from your Twilio account dashboard: https://www.twilio.com/console

# Email Configuration (for email notifications)
EMAIL_SENDER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_RECEIVER=recipient_email@example.com
# If using Gmail, you may need to create an App Password: https://support.google.com/accounts/answer/185833?hl=en

# Scraper Configuration
TARGET_URL=https://example.com/products
# The base URL of the e-commerce site you want to scrape

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Storage Configuration
STORAGE_PATH=./storage
# Local path where scraped data and images will be stored

# PostgreSQL Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=scraper_db

# Application Configuration
PORT=8000
HOST=0.0.0.0
